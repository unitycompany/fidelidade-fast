                                        <p style={{ color: '#999', margin: 0 }}>N√£o foi poss√≠vel identificar produtos na nota fiscal enviada.</p>
                                    </div>
                                )}

                                <TotalPointsCard>
                                    <div className="icon">
                                        {result.error ? <FiX /> : <FiAward />}
                                    </div>
                                    <div className="value">{result.totalPoints ?? 0}</div>
